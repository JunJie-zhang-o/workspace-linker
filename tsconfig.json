{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "rootDir": ".",
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "mocha", "vscode"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "out", "node_modules"]
}
